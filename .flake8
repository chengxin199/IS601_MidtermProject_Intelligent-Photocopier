[flake8]
max-line-length = 100
exclude =
    .venv,
    venv,
    .git,
    __pycache__,
    build,
    dist,
    Lessons/
extend-ignore =
    E203,
    W503
per-file-ignores =
    __init__.py:F401
    src/intelligent_photocopier/course_generator.py:E501
    src/intelligent_photocopier/demo.py:E501
    src/intelligent_photocopier/file_manager.py:E501
    quickstart.py:E501
    tests/test_*.py:E501
