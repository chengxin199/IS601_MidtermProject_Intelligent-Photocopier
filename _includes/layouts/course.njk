<style>
  .course-layout {
    display: flex;
    gap: 2rem;
    margin-top: 1rem;
  }

  .course-sidebar {
    position: sticky;
    top: 20px;
    width: 280px;
    height: fit-content;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 8px 30px rgba(102, 126, 234, 0.3);
    flex-shrink: 0;
  }

  .course-sidebar h3 {
    color: white;
    margin-top: 0;
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
    border-bottom: 2px solid rgba(255,255,255,0.3);
    padding-bottom: 0.75rem;
  }

  .course-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .course-sidebar li {
    margin-bottom: 0.75rem;
  }

  .course-sidebar a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: white;
    text-decoration: none;
    padding: 0.75rem;
    border-radius: 10px;
    background: rgba(255,255,255,0.1);
    transition: all 0.2s;
    font-size: 0.95rem;
  }

  .course-sidebar a:hover {
    background: rgba(255,255,255,0.25);
    transform: translateX(5px);
  }

  .course-content {
    flex: 1;
    min-width: 0;
  }

  @media (max-width: 968px) {
    .course-layout {
      flex-direction: column;
    }

    .course-sidebar {
      position: static;
      width: 100%;
      margin-bottom: 2rem;
    }

    .course-sidebar h3 {
      font-size: 1.1rem;
    }

    .course-sidebar a {
      font-size: 0.9rem;
      padding: 0.6rem;
    }
  }

  @media (max-width: 640px) {
    .course-layout {
      gap: 1rem;
    }

    .course-sidebar {
      padding: 1rem;
      border-radius: 12px;
    }

    .course-sidebar h3 {
      font-size: 1rem;
      margin-bottom: 1rem;
    }

    .course-sidebar li {
      margin-bottom: 0.5rem;
    }

    .course-sidebar a {
      font-size: 0.85rem;
      padding: 0.5rem;
      gap: 0.3rem;
    }

    .back-link {
      font-size: 0.9rem;
      padding: 0.6rem 1rem;
    }
  }
</style>

